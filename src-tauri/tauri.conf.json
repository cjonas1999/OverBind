{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "OverBind",
    "version": "1.4.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": [
          "$APPDATA/OverBind/*"
        ]
      },
      "os": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "deb",
        "msi",
        "appimage"
      ],
      "identifier": "com.github.cjonas1999.overbind",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": null,
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        },
        "wix": null
      }
    },
    "updater": {
      "active": false,
      "dialog": true,
      "pubkey": "",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "OverBind",
        "width": 800,
        "height": 600,
        "label": "main",
        "url": "index.html",
        "focus": true
      }
    ]
  }
}